<div class="text-center">
  <h1>Restaurant's list</h1>

  <%= link_to 'Create a new restaurant', new_restaurant_path, class: "btn btn-default" %>

</br> </br> </br>

  <p><%= flash[:confirmation] %></p>

  <ul class="list-unstyled"><% @restaurants.each do |restaurant| %>
    <li><h3><%= restaurant.name %></h3>
        <h4>Located at: <%= restaurant.address %></h4>

        <%= link_to restaurant_path(restaurant) do %>
          <button type="button" class="btn btn-primary">Show more details</button>
        <% end %>
    </li>
    <% end %>
  </ul>

</div>


